<h1>Director #<%= @the_id %> details</h1>
<a href = "/directors">Go back</a>
<hr>

<dl>
  <dt> Name </dt>
  <dd> <%= @name %> </dd>
  <dt> Dob </dt>
  <dd> <%= @dob %> </dd>
  <dt> Bio </dt>
  <dd> <%= @bio %> </dd>
  <dt> Image </dt>
  <dd> <img src="<%= @image %>" width="250"> </dd>
  <dt> Created at </dt>
  <dd> <%= @created_at %> </dd>
  <dt> Updated at </dt>
  <dd> <%= @updated_at %> </dd>
</dl>

<hr>
<h2>Filmography</h2>
<% matching_movies = Movie.where({ :director_id => @director.id}) %>
<table border="1">
  <tr>
   <th> ID </th>
   <th> Image </th>
   <th> Title </th>
   <th> Year </th>
   <th> Director </th>
   <th> </th>
  </tr>

  <% matching_movies.each do |movie| %>
    <tr>
      <td><%= movie.id %></td>
      <td><img src="<%= movie.image %>" width="250"></td>
      <td><%= movie.title %></td>
      <td><%= movie.year %></td>
      <td><%= @director.name %></td>
      <td> <a href="/movies/<%= movie.id %>">Show details</a></td>
    </tr>
  <% end %>
</table>

<h1> List of all movies </h1>
<hr>

<table border="1">
  <tr>
   <th> ID </th>
   <th> Image </th>
   <th> Title </th>
   <th> Year </th>
   <th> Director </th>
   <th> </th>
  </tr>

  <% Movie.all.each do |mov| %>
    <tr>
      <td><%= mov.id %></td>
      <td><img src="<%= mov.image %>" width="250"></td>
      <td><%= mov.title %></td>
      <td><%= mov.year %></td>
      <% matching_records = Director.where({ :id => mov.director_id }) %>
      <% director_name = matching_records.at(0) %>
        <td> <%= director_name.name %></td>
      <td> <a href="/movies/<%= mov.id %>">Show details</a></td>
    </tr>
  <% end %>
</table>
